@using EntityLayer.Concrete
@model List<Destination>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UILayout.cshtml";
	int i = 0;
}
<section class="w3l-about-breadcrumb text-left">
	<div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
		<div class="container">
			<h2 class="title">Rotalar </h2>
			<ul class="breadcrumbs-custom-path mt-2">
				<li><a href="/Default/Index">Ana Sayfa</a></li>
				<li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
			</ul>
		</div>
	</div>
</section>
<section class="grids-1 py-5">
	<div class="grids py-lg-5 py-md-4">
		<div class="container">
			<h3 class="hny-title mb-5">Tur Rotaları</h3>
			<div class="row">
				@foreach (var item in Model)
				{
					if (i == 0)
					{
						<div class="col-lg-4 col-md-4 col-6">
							<div class="column">
								<a href="/Destination/DestinationDetails/@item.DestinationId"><img src="@item.Image" alt="" class="img-fluid"></a>
								<div class="info">
									<h4><a href="/Destination/DestinationDetails/@item.DestinationId">@item.City</a></h4>
									<p>@item.DayNight </p>
									<div class="dst-btm">
										<h6 class="">Başlayan Fiyatlarla </h6>
										<span>@item.Price TL</span>
									</div>
								</div>
							</div>
						</div>
					}
					else if (i == 1)
					{

						<div class="col-lg-4 col-md-4 col-6 mt-md-0">
							<div class="column">
								<a href="/Destination/DestinationDetails/@item.DestinationId"><img src="@item.Image" alt="" class="img-fluid"></a>
								<div class="info">
									<h4><a href="/Destination/DestinationDetails/@item.DestinationId">@item.City</a></h4>
									<p>@item.DayNight </p>
									<div class="dst-btm">
										<h6 class="">Başlayan Fiyatlarla </h6>
										<span>@item.Price TL</span>
									</div>
								</div>
							</div>
						</div>
					}
					else
					{
						<div class="col-lg-4 col-md-4 col-6 mt-md-0 mt-4">
							<div class="column">
								<a href="/Destination/DestinationDetails/@item.DestinationId"><img src="@item.Image" alt="" class="img-fluid"></a>
								<div class="info">
									<h4><a href="/Destination/DestinationDetails/@item.DestinationId">@item.City</a></h4>
									<p>@item.DayNight </p>
									<div class="dst-btm">
										<h6 class="">Başlayan Fiyatlarla </h6>
										<span>@item.Price TL</span>
									</div>
								</div>
							</div>
						</div>
					}
					{ i++; }
				}



			</div>
		</div>
	</div>
</section>
